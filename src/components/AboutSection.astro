---
import type { GlobalSettings } from "../types/microcms";

interface Props {
  settings: GlobalSettings;
}

const { settings } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, "");
---

<section class="py-12 md:py-24 px-6 md:px-20 bg-background-light dark:bg-background-dark" id="about">
  <div class="max-w-6xl mx-auto flex flex-col gap-10 md:gap-16">
    <!-- Section Header -->
    <div class="flex items-end gap-4 border-b border-gray-200 dark:border-gray-800 pb-4">
      <h2 class="font-serif text-3xl font-bold tracking-tight text-text-main dark:text-white">About</h2>
      <span class="text-sm text-primary font-medium mb-1 tracking-wider opacity-80">{settings.about_subtitle}</span>
    </div>

    <!-- Content: Photo + Text -->
    <div class="flex flex-col md:flex-row gap-10 md:gap-16 items-start">
      <!-- Profile Image -->
      {settings.profile_image && (
        <div class="w-full md:w-2/5 shrink-0">
          <div class="aspect-[3/4] overflow-hidden rounded-sm bg-gray-100 dark:bg-gray-900">
            <img
              src={`${settings.profile_image.url}?w=800&q=80`}
              alt={settings.artist_name}
              class="w-full h-full object-cover grayscale-[30%]"
            />
          </div>
        </div>
      )}

      <!-- Text + Button -->
      <div class="flex-1 flex flex-col gap-8 md:gap-10">
        <div class="flex flex-col gap-3 border-l-[3px] border-primary pl-6">
          <span class="font-serif text-2xl md:text-3xl font-bold text-text-main dark:text-white tracking-widest">{settings.artist_name}</span>
          <span class="text-sm font-display tracking-[0.25em] text-primary uppercase">Yuna Tanaka</span>
        </div>
        {settings.about_text && (
          <div class="font-serif text-base leading-[2] text-text-main dark:text-gray-200 text-left md:text-justify rich-content line-clamp-6">
            <Fragment set:html={settings.about_text} />
          </div>
        )}
        <div>
          <a
            href={`${base}/about`}
            class="inline-flex items-center gap-2 text-sm font-medium tracking-wider text-primary hover:text-primary/80 transition-colors group"
          >
            Read More
            <span class="material-symbols-outlined text-sm group-hover:translate-x-1 transition-transform">arrow_forward</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
