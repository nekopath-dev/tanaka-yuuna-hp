---
import type { Research } from "../types/microcms";

interface Props {
  research: Research[];
}

const { research } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, "");
---

<section class="py-24 px-6 md:px-20 bg-background-light dark:bg-background-dark" id="projects">
  <div class="flex flex-col md:flex-row justify-between items-end mb-16 border-b border-gray-200 dark:border-gray-800 pb-4">
    <div>
      <div class="flex items-end gap-4 mb-2">
        <h2 class="font-serif text-3xl font-bold tracking-tight text-text-main dark:text-white">Projects</h2>
        <span class="text-sm text-primary font-medium mb-1 tracking-wider opacity-80">プロジェクト</span>
      </div>
    </div>
    <a class="hidden md:flex items-center gap-1 text-sm font-bold text-primary hover:text-primary/80 transition-colors" href={`${base}/projects`}>
      View All Projects <span class="material-symbols-outlined text-sm">arrow_forward</span>
    </a>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-y-16 gap-x-12">
    {research.map((item, i) => (
      <article class={`flex flex-col gap-4 group ${i === 1 ? "md:mt-20" : ""}`}>
        <a href={`${base}/projects/${item.id}`} class="aspect-[3/4] overflow-hidden rounded relative bg-gray-200 block">
          {item.main_image ? (
            <div
              class="w-full h-full bg-cover bg-center transition-all duration-700 group-hover:scale-105 group-hover:opacity-90"
              style={`background-image: url("${item.main_image.url}?w=600&q=80");`}
            />
          ) : (
            <div class="w-full h-full flex items-center justify-center bg-gray-100 dark:bg-gray-800">
              <span class="text-xs text-gray-400 dark:text-gray-500 tracking-wider">画像準備中</span>
            </div>
          )}
          <div class="absolute inset-0 bg-primary/0 group-hover:bg-primary/10 transition-colors duration-500"></div>
        </a>
        <div class="flex flex-col gap-2">
          <a href={`${base}/projects/${item.id}`}>
            <h3 class="font-serif text-xl text-text-main dark:text-white group-hover:text-primary transition-colors">{item.title}</h3>
          </a>
          {item.summary && (
            <p class="text-xs text-text-muted leading-relaxed line-clamp-2">{item.summary}</p>
          )}
          <div class="flex items-center gap-3 mt-1">
            {item.category && (
              <span class="text-[10px] font-bold text-primary bg-primary/10 px-2 py-0.5 rounded uppercase tracking-wider">{item.category}</span>
            )}
            {item.year && <span class="text-xs font-mono text-text-muted">{item.year}</span>}
          </div>
        </div>
      </article>
    ))}
  </div>
  <div class="md:hidden mt-12 flex justify-center">
    <a href={`${base}/projects`} class="px-6 py-3 border border-text-main dark:border-white text-sm font-medium hover:bg-text-main hover:text-white dark:hover:bg-white dark:hover:text-background-dark transition-colors inline-block">
      View All Projects
    </a>
  </div>
</section>
