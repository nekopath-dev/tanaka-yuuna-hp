---
import type { GlobalSettings } from "../types/microcms";

interface Props {
  settings: GlobalSettings;
}

const { settings } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, "");
---

<footer class="bg-white dark:bg-[#111111] border-t border-gray-100 dark:border-gray-800" id="contact">
  <div class="container mx-auto px-6 md:px-32 py-24">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-16">
      <!-- Contact Info -->
      <div class="flex flex-col gap-8">
        <h2 class="font-serif text-3xl font-bold text-text-main dark:text-white">Contact</h2>
        <p class="text-text-muted text-sm leading-relaxed max-w-sm">{settings.contact_description}</p>
        <div class="flex flex-col gap-4 mt-4">
          <a class="flex items-center gap-3 text-lg font-medium hover:text-primary transition-colors group" href={`mailto:${settings.contact_email}`}>
            <span class="material-symbols-outlined group-hover:scale-110 transition-transform">mail</span>
            {settings.contact_email}
          </a>
          <div class="flex gap-4 mt-2">
            {settings.instagram_url && (
              <a class="w-10 h-10 rounded-full border border-gray-200 dark:border-gray-700 flex items-center justify-center hover:bg-primary hover:border-primary hover:text-white transition-all" href={settings.instagram_url} target="_blank" rel="noopener noreferrer">
                <span class="text-xs">IG</span>
              </a>
            )}
            {settings.x_url && (
              <a class="w-10 h-10 rounded-full border border-gray-200 dark:border-gray-700 flex items-center justify-center hover:bg-primary hover:border-primary hover:text-white transition-all" href={settings.x_url} target="_blank" rel="noopener noreferrer">
                <span class="text-xs">X</span>
              </a>
            )}
          </div>
        </div>
      </div>
      <!-- Newsletter -->
      <div class="flex flex-col justify-end gap-6">
        <p class="text-xs font-bold tracking-widest uppercase text-text-muted">Newsletter</p>
        <form class="flex flex-col gap-2">
          <div class="relative">
            <input class="w-full bg-transparent border-b border-gray-300 dark:border-gray-700 py-3 text-text-main dark:text-white placeholder-gray-400 focus:outline-none focus:border-primary transition-colors font-light" placeholder="メールアドレス (Email Address)" type="email" />
            <button class="absolute right-0 top-3 text-text-muted hover:text-primary transition-colors" type="button">
              <span class="material-symbols-outlined">arrow_forward</span>
            </button>
          </div>
        </form>
        <p class="text-[10px] text-gray-400">展示会や新作の情報を不定期でお届けします。</p>
      </div>
    </div>
    <div class="mt-24 pt-8 border-t border-gray-100 dark:border-gray-800 flex flex-col md:flex-row justify-between items-center text-[10px] text-gray-400 uppercase tracking-widest">
      <p>{settings.copyright_text}</p>
      <div class="flex gap-6 mt-4 md:mt-0">
        <a class="hover:text-text-main dark:hover:text-white transition-colors" href={`${base}/contact`}>Contact</a>
      </div>
    </div>
  </div>
</footer>
