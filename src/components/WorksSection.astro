---
import type { Work } from "../types/microcms";

interface Props {
  works: Work[];
}

const { works } = Astro.props;
const base = import.meta.env.BASE_URL.replace(/\/$/, "");
---

<section class="py-12 md:py-24 px-6 md:px-20 bg-background-light dark:bg-background-dark" id="works">
  <div class="flex flex-col md:flex-row justify-between items-end mb-8 md:mb-16 border-b border-gray-200 dark:border-gray-800 pb-4">
    <div>
      <div class="flex items-end gap-4 mb-2">
        <h2 class="font-serif text-3xl font-bold tracking-tight text-text-main dark:text-white">Works</h2>
        <span class="text-sm text-primary font-medium mb-1 tracking-wider opacity-80">作品</span>
      </div>
    </div>
    <a class="hidden md:flex items-center gap-1 text-sm font-bold text-primary hover:text-primary/80 transition-colors" href={`${base}/works`}>
      View All Works <span class="material-symbols-outlined text-sm">arrow_forward</span>
    </a>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-y-8 md:gap-y-16 gap-x-6 md:gap-x-12">
    {works.map((work, i) => (
      <article class={`flex flex-col gap-4 group ${i === 1 ? "md:mt-20" : ""}`}>
        <a href={`${base}/works/${work.slug}`} class="aspect-[3/4] overflow-hidden rounded relative bg-gray-100 dark:bg-gray-800 block">
          {work.main_image ? (
            <>
              <div
                class="w-full h-full bg-cover bg-center transition-all duration-700 group-hover:scale-105 group-hover:opacity-90"
                style={`background-image: url("${work.main_image.url}?w=600&q=80");`}
              />
              <div class="absolute inset-0 bg-primary/0 group-hover:bg-primary/10 transition-colors duration-500"></div>
            </>
          ) : (
            <div class="w-full h-full flex items-center justify-center">
              <span class="text-xs text-gray-400 dark:text-gray-500 tracking-wider">画像準備中</span>
            </div>
          )}
        </a>
        <div class="flex flex-col gap-2">
          <a href={`${base}/works/${work.slug}`}>
            <h3 class="font-serif text-xl text-text-main dark:text-white group-hover:text-primary transition-colors">{work.title}</h3>
          </a>
          {work.material && (
            <p class="text-xs text-text-muted leading-relaxed">{work.material}</p>
          )}
          <div class="flex items-center gap-3 mt-1">
            {work.category && (
              <span class="text-[10px] font-bold text-primary bg-primary/10 px-2 py-0.5 rounded uppercase tracking-wider">{work.category}</span>
            )}
            {work.year && <span class="text-xs font-mono text-text-muted">{work.year}</span>}
          </div>
        </div>
      </article>
    ))}
  </div>
  <div class="md:hidden mt-12 flex justify-center">
    <a href={`${base}/works`} class="px-6 py-3 border border-text-main dark:border-white text-sm font-medium hover:bg-text-main hover:text-white dark:hover:bg-white dark:hover:text-background-dark transition-colors inline-block">
      View All Works
    </a>
  </div>
</section>
