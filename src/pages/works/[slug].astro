---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getGlobalSettings, getWorks } from "../../lib/microcms";
import type { Work } from "../../types/microcms";

export async function getStaticPaths() {
  const works = await getWorks();
  return works.map((work, i) => ({
    params: { slug: work.slug },
    props: {
      work,
      prevWork: i > 0 ? works[i - 1] : null,
      nextWork: i < works.length - 1 ? works[i + 1] : null,
    },
  }));
}

interface Props {
  work: Work;
  prevWork: Work | null;
  nextWork: Work | null;
}

const { work, prevWork, nextWork } = Astro.props;
const settings = await getGlobalSettings();
const base = import.meta.env.BASE_URL.replace(/\/$/, "");
---

<BaseLayout title={work.title} settings={settings}>
  <article class="flex flex-col w-full">
    <!-- Back Button -->
    <div class="px-6 md:px-20 py-8 md:py-10 border-b border-gray-100 dark:border-gray-800/50 flex items-center justify-between">
      <a class="group flex items-center gap-2 text-xs font-medium uppercase tracking-widest text-text-muted hover:text-primary transition-colors" href={`${base}/works`}>
        <span class="material-symbols-outlined text-sm transition-transform group-hover:-translate-x-1">arrow_back</span>
        Back to Works
      </a>
      <span class="hidden md:inline text-xs text-text-muted/50 tracking-widest">WORK DETAIL</span>
    </div>

    <!-- Main Image -->
    <section class="w-full px-6 md:px-20 py-8 md:py-12">
      {work.main_image ? (
        <div class="w-full h-[60vh] md:h-[80vh] overflow-hidden rounded-sm bg-gray-100 dark:bg-gray-900 shadow-sm relative">
          <div
            class="w-full h-full bg-cover bg-center"
            style={`background-image: url("${work.main_image.url}?w=1920&q=80");`}
          />
          <div class="absolute inset-0 bg-black/5 mix-blend-multiply pointer-events-none"></div>
        </div>
      ) : (
        <div class="w-full h-[40vh] md:h-[50vh] overflow-hidden rounded-sm bg-gray-100 dark:bg-gray-900 shadow-sm flex items-center justify-center">
          <span class="text-sm text-gray-400 dark:text-gray-500 tracking-wider">画像準備中</span>
        </div>
      )}
    </section>

    <!-- Work Info -->
    <section class="px-6 md:px-20 pb-12 md:pb-24">
      <div class="max-w-4xl mx-auto flex flex-col gap-16">
        <!-- Header -->
        <header class="flex flex-col md:flex-row justify-between items-start gap-12 border-b border-gray-200 dark:border-gray-800 pb-12">
          <div class="flex flex-col gap-4">
            <h1 class="font-serif text-4xl md:text-5xl font-medium text-text-main dark:text-white leading-tight">
              {work.title}
            </h1>
            {work.subtitle_en && (
              <span class="text-lg md:text-xl font-serif italic text-text-muted font-light">{work.subtitle_en}</span>
            )}
          </div>
          <div class="grid grid-cols-2 gap-x-12 gap-y-6 text-sm font-light">
            {work.year && (
              <div class="flex flex-col gap-1">
                <span class="text-xs uppercase tracking-widest text-text-muted/70">Year</span>
                <span class="text-text-main dark:text-gray-200">{work.year}</span>
              </div>
            )}
            {work.technique && (
              <div class="flex flex-col gap-1">
                <span class="text-xs uppercase tracking-widest text-text-muted/70">Technique</span>
                <span class="text-text-main dark:text-gray-200">{work.technique}</span>
              </div>
            )}
            {work.material && (
              <div class="col-span-2 flex flex-col gap-1">
                <span class="text-xs uppercase tracking-widest text-text-muted/70">Materials</span>
                <span class="text-text-main dark:text-gray-200">{work.material}</span>
              </div>
            )}
          </div>
        </header>

        <!-- Description -->
        {work.description && (
          <div class="flex flex-col md:flex-row gap-12 md:gap-20">
            <div class="hidden md:block w-1/4">
              <div class="sticky top-32">
                <span class="block w-8 h-[1px] bg-primary mb-4"></span>
                <p class="text-xs text-text-muted leading-relaxed">
                  コンセプトと制作背景について
                </p>
              </div>
            </div>
            <div class="md:w-3/4 font-serif text-base md:text-lg leading-[1.8] text-text-main dark:text-gray-300 text-left md:text-justify rich-content">
              <Fragment set:html={work.description} />
            </div>
          </div>
        )}
      </div>
    </section>

    <!-- Gallery -->
    {work.gallery && work.gallery.length > 0 && (
      <section class="bg-gray-50 dark:bg-[#151515] py-12 md:py-24 px-6 md:px-20 border-t border-gray-100 dark:border-gray-800">
        <div class="max-w-6xl mx-auto">
          <div class="flex items-end gap-4 mb-12">
            <h3 class="font-serif text-2xl text-text-main dark:text-white">Details</h3>
            <span class="text-xs text-text-muted mb-1 tracking-wider uppercase">Texture & Weave</span>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {work.gallery.map((img, i) => (
              <div class={`flex flex-col gap-4 ${i % 2 === 1 ? "md:pt-24" : ""} ${i > 1 ? "md:-mt-24" : ""}`}>
                <div class="w-full overflow-hidden rounded-sm bg-gray-200 relative group" style={`aspect-ratio: ${i % 3 === 0 ? "4/3" : i % 3 === 1 ? "3/4" : "4/5"};`}>
                  <div
                    class="w-full h-full bg-cover bg-center transition-transform duration-1000 group-hover:scale-110"
                    style={`background-image: url("${img.url}?w=800&q=80");`}
                  />
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Prev / Next Navigation -->
    <nav class="border-t border-gray-200 dark:border-gray-800 bg-white dark:bg-[#111111]">
      <div class="flex flex-col md:flex-row h-auto md:h-40">
        {prevWork ? (
          <a class="flex-1 border-b md:border-b-0 md:border-r border-gray-200 dark:border-gray-800 p-8 md:p-12 flex flex-col justify-center items-start group hover:bg-gray-50 dark:hover:bg-gray-900 transition-colors" href={`${base}/works/${prevWork.slug}`}>
            <span class="text-xs text-text-muted uppercase tracking-widest mb-2 flex items-center gap-2">
              <span class="material-symbols-outlined text-sm group-hover:-translate-x-1 transition-transform">arrow_back</span>
              Previous Work
            </span>
            <span class="font-serif text-xl md:text-2xl text-text-main dark:text-white group-hover:text-primary transition-colors">{prevWork.title}</span>
          </a>
        ) : (
          <div class="flex-1 border-b md:border-b-0 md:border-r border-gray-200 dark:border-gray-800 p-8 md:p-12"></div>
        )}
        {nextWork ? (
          <a class="flex-1 p-8 md:p-12 flex flex-col justify-center items-end group hover:bg-gray-50 dark:hover:bg-gray-900 transition-colors" href={`${base}/works/${nextWork.slug}`}>
            <span class="text-xs text-text-muted uppercase tracking-widest mb-2 flex items-center gap-2">
              Next Work
              <span class="material-symbols-outlined text-sm group-hover:translate-x-1 transition-transform">arrow_forward</span>
            </span>
            <span class="font-serif text-xl md:text-2xl text-text-main dark:text-white group-hover:text-primary transition-colors">{nextWork.title}</span>
          </a>
        ) : (
          <div class="flex-1 p-8 md:p-12"></div>
        )}
      </div>
    </nav>
  </article>
</BaseLayout>
